# StackStorm Docker setup - Environment Variables
# Copy this file to .env and adjust the values as needed

# Basic options
CONTAINER_NAME=stackstorm
ST2_WEB_PORT=8080
ST2_API_PORT=9101

# Version control
ST2_VERSION=3.7.0
MONGO_VERSION=4.4
RABBITMQ_VERSION=3-management
POSTGRES_VERSION=13

# StackStorm configuration
ST2_AUTH_USERNAME=st2admin
ST2_AUTH_PASSWORD=Ch@ngeMe
ST2_HOSTNAME=localhost

# RabbitMQ configuration
RABBITMQ_USER=stackstorm
RABBITMQ_PASSWORD=password

# PostgreSQL configuration
POSTGRES_USER=stackstorm
POSTGRES_PASSWORD=password
POSTGRES_DB=mistral

# Advanced options
# ST2_LOG_LEVEL=INFO  # Uncomment to change log level
# ST2_APPLY_RBAC=true  # Uncomment to enable RBAC

# Volume configuration
USE_NAMED_VOLUMES=false  # Set to 'true' to use named volumes instead of anonymous volumes

