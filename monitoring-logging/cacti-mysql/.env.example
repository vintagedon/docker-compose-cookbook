# Cacti with MySQL Docker Environment Variables for Monitoring and Logging

# Cacti Version
CACTI_VERSION=latest

# Container Name
CONTAINER_NAME=cacti_monitor

# Ports
CACTI_PORT=80

# MySQL Settings
MYSQL_VERSION=8.0
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=cacti
MYSQL_USER=cactiuser
MYSQL_PASSWORD=cactipassword

# Timezone
TIMEZONE=UTC

# Monitoring Settings
POLLER_INTERVAL=300  # Default polling interval in seconds

# Add any additional environment variables for monitoring and logging below