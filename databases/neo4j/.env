# .env file for Neo4j Docker setup
# GitHub: https://github.com/vintagedon/docker-compose-cookbook
# Description: This file contains environment variables for configuring the Neo4j Docker instance.

# Neo4j basic configuration
NEO4J_CONTAINER_NAME=neo4j
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_DATA_DIR=/path/to/your/neo4j/data
NEO4J_LOGS_DIR=/path/to/your/neo4j/logs
NEO4J_IMPORT_DIR=/path/to/your/neo4j/import
NEO4J_PLUGINS_DIR=/path/to/your/neo4j/plugins

# Authentication (use 'neo4j/your_password' or 'none' for no auth)
NEO4J_AUTH=neo4j/your_secure_password

# Memory settings
NEO4J_PAGECACHE_SIZE=512M
NEO4J_HEAP_INITIAL_SIZE=512M
NEO4J_HEAP_MAX_SIZE=1G

# Additional Neo4j configuration options (uncomment and modify as needed)

# Allow Neo4j to upgrade the database format
#NEO4J_ALLOW_UPGRADE=true

# Unrestricted procedures (comma-separated list)
#NEO4J_UNRESTRICTED_PROCEDURES=apoc.*,algo.*

# Whitelist procedures (comma-separated list)
#NEO4J_WHITELIST_PROCEDURES=apoc.coll.*,apoc.load.*

# Enable GC logging
#NEO4J_dbms_jvm_additional=-XX:+PrintGCDetails

# Set transaction timeout
#NEO4J_dbms_transaction_timeout=60s

# Set default database
#NEO4J_dbms_default__database=neo4j

# Enable query logging
#NEO4J_dbms_logs_query_enabled=true

# Set query logging threshold (in milliseconds)
#NEO4J_dbms_logs_query_threshold=0

# Enable bolt connector
#NEO4J_dbms_connector_bolt_enabled=true

# Enable HTTP connector
#NEO4J_dbms_connector_http_enabled=true

# Note: Replace the placeholder values with your actual configuration details.
# Ensure to use strong, unique values for passwords in production environments.
# Uncomment and adjust the additional options as needed for your specific use case.
