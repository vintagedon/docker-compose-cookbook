# InfluxDB Docker setup - Environment Variables

# Basic options
CONTAINER_NAME=influxdb
INFLUXDB_PORT=8086

# Version control
INFLUXDB_VERSION=2.7

# InfluxDB initialization options
INFLUXDB_INIT_MODE=setup
INFLUXDB_INIT_USERNAME=admin
INFLUXDB_INIT_PASSWORD=password123
INFLUXDB_INIT_ORG=myorg
INFLUXDB_INIT_BUCKET=mybucket
INFLUXDB_INIT_RETENTION=1w
INFLUXDB_INIT_ADMIN_TOKEN=mytoken

# Advanced options
# INFLUXDB_REPORTING_DISABLED=false
# INFLUXDB_HTTP_AUTH_ENABLED=true
# INFLUXDB_HTTP_FLUX_ENABLED=true

# Performance tuning options
# INFLUXDB_CACHE_MAX_MEMORY_SIZE=1073741824
# INFLUXDB_MAX_CONCURRENT_COMPACTIONS=2

# Volume configuration
USE_NAMED_VOLUMES=false

# Note: For production use, please change all default values, especially passwords and tokens.