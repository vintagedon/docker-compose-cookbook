# MongoDB Docker setup - Environment Variables

# Basic options
CONTAINER_NAME=mongodb
MONGO_PORT=27017

# Version control
MONGO_VERSION=5.0.9

# Authentication
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=changeme
MONGO_INITDB_DATABASE=admin

# Advanced options
# MONGO_REPLICA_SET_NAME=rs0
# MONGO_OPLOG_SIZE=1024

# Performance tuning options
# MONGO_CACHE_SIZE_GB=1
# MONGO_MAX_CONNECTIONS=100

# Multi-node setup options
# NODE_1_IP=x.x.x.x
# NODE_2_IP=y.y.y.y
# NODE_3_IP=z.z.z.z

# Volume configuration
USE_NAMED_VOLUMES=false

# Additional options
# MONGO_EXTRA_FLAGS=--wiredTigerCacheSizeGB 2