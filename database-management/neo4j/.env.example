# Neo4j Docker Environment Variables

# Neo4j Version
NEO4J_VERSION=latest

# Container Name
CONTAINER_NAME=neo4j

# Ports
NEO4J_HTTP_PORT=7474
NEO4J_HTTPS_PORT=7473
NEO4J_BOLT_PORT=7687

# Authentication
NEO4J_AUTH=neo4j/your_password_here

# Memory Settings
NEO4J_HEAP_MEMORY=512M
NEO4J_MAX_HEAP=2G
NEO4J_PAGECACHE=512M

# APOC Settings
APOC_EXPORT_ENABLED=true
APOC_IMPORT_ENABLED=true
APOC_IMPORT_USE_NEO4J_CONFIG=true

# Procedure Settings
UNRESTRICTED_PROCEDURES=apoc.*

# Add any additional environment variables below