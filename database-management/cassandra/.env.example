# Cassandra Docker setup - Environment Variables

# Basic options
CONTAINER_NAME=cassandra
CASSANDRA_PORT=9042

# Version control
CASSANDRA_VERSION=latest

# Common options
CASSANDRA_CLUSTER_NAME=MyCluster
CASSANDRA_ENDPOINT_SNITCH=SimpleSnitch
CASSANDRA_DC=dc1

# JVM options
MAX_HEAP_SIZE=4G
HEAP_NEWSIZE=800M

# Advanced options
# CASSANDRA_SEEDS=cassandra
# CASSANDRA_NUM_TOKENS=256
# CASSANDRA_LISTEN_ADDRESS=auto

# Performance tuning options
# CASSANDRA_CONCURRENT_READS=32
# CASSANDRA_CONCURRENT_WRITES=32
# CASSANDRA_MEMTABLE_FLUSH_WRITERS=2

# Multi-node setup options
# NODE_1_IP=x.x.x.x
# NODE_2_IP=y.y.y.y
# NODE_3_IP=z.z.z.z

# Volume configuration
USE_NAMED_VOLUMES=false

# Security options
# CASSANDRA_AUTHENTICATOR=PasswordAuthenticator
# CASSANDRA_AUTHORIZER=CassandraAuthorizer
# SSL_ENABLE=false