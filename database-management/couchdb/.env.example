# CouchDB Docker setup - Environment Variables

# Basic options
CONTAINER_NAME=couchdb
PORT=5984

# Version control
COUCHDB_VERSION=latest

# Common options
COUCHDB_USER=admin
COUCHDB_PASSWORD=password
COUCHDB_SECRET=your_secret_here
COUCHDB_ERLANG_COOKIE=your_erlang_cookie_here

# Advanced options
# MAX_DOCUMENT_SIZE=4294967296
# MAX_HTTP_CONNECTIONS=2048

# Performance tuning options
# STALE=update_after
# ALLOW_PERSISTENT_QUERIES=true

# Multi-node setup options
# NODE_1_IP=x.x.x.x
# NODE_2_IP=y.y.y.y

# Volume configuration
USE_NAMED_VOLUMES=false

# Additional options
# COUCHDB_LOG_LEVEL=info
# COUCHDB_BIND_ADDRESS=0.0.0.0