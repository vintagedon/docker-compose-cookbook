# .env file for OpenVPN Docker setup
# GitHub: https://github.com/vintagedon/docker-compose-cookbook
# Description: This file contains environment variables for configuring the OpenVPN Docker instance.

# Basic OpenVPN container configuration
OPENVPN_CONTAINER_NAME=openvpn
OPENVPN_PORT=1194
OPENVPN_PROTO=udp
OPENVPN_CONFIG_DIR=/path/to/your/openvpn/config
OPENVPN_DATA_DIR=/path/to/your/openvpn/data
OPENVPN_SERVERNAME=myopenvpnserver

# Common OpenVPN configuration options
OPENVPN_DNS1=8.8.8.8
OPENVPN_DNS2=8.8.4.4
OPENVPN_CIPHER=AES-256-GCM
OPENVPN_AUTH=SHA256
OPENVPN_VERB=3
OPENVPN_CLIENT_TO_CLIENT=false
OPENVPN_MAX_CLIENTS=100

# Advanced OpenVPN configuration options
OPENVPN_PUSH="route 192.168.0.0 255.255.255.0"
OPENVPN_TLS_VERSION_MIN=1.2
OPENVPN_TLS_CIPHER=TLS-ECDHE-ECDSA-WITH-AES-256-GCM-SHA384
OPENVPN_DUPLICATE_CN=false
OPENVPN_KEEPALIVE="10 60"
OPENVPN_RENEG_SEC=0
OPENVPN_COMP_LZO=adaptive
OPENVPN_REMOTE_CERT_TLS=client
OPENVPN_USER=nobody
OPENVPN_GROUP=nogroup

# Note: Replace the placeholder values with your actual configuration details.
# Uncomment and adjust the options as needed for your specific use case.
